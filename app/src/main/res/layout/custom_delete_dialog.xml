<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    android:id="@+id/delete_dialog"
    android:layout_height="190dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/main_bg"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="delete"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/delete_heading"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:textColor="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:backgroundTint="@color/recycler_view_bottom_line"
            android:background="@color/recycler_view_bottom_line"
            android:layout_below="@+id/delete_heading"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delete_heading"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="Are you sure?"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/delete_no"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/delete_yes"
            android:layout_marginTop="30dp"
            android:text="YES"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:id="@+id/delete_no"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:text="NO"
            android:textSize="15sp"/>





    </RelativeLayout>


</androidx.cardview.widget.CardView>